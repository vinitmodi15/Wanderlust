<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-8 offset-3" style="background-image: url('https://images.app.goo.gl/zgXwVE1LT4k2pxwB9'); background-size: cover; background-position: center; padding: 20px; border-radius: 10px;">
        <form action="/listings/submitbooking" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="name" name="booking[name]" placeholder="Enter your name" required><br><br>
    
            <label for="email">Email:</label>
            <input type="email" id="email" name="booking[email]" placeholder="Enter your email" required><br><br>
    
            <label for="check-in">Check-in Date:</label>
            <input type="date" id="check-in" name="booking[checkIn]" required><br><br>
    
            <label for="check-out">Check-out Date:</label>
            <input type="date" id="check-out" name="booking[checkOut]"required><br><br>
    
            <label for="rooms">Number of Rooms:</label>
            <input type="number" id="rooms" name="booking[rooms]" min="1" placeholder="1"><br><br>
    
            <label for="adults">Number of Adults:</label>
            <input type="number" id="adults" name="booking[adults]" min="1" placeholder="2" max="2"><br><br>
    
            <label for="children">Number of Children:</label>
            <input type="number" id="children" name="booking[children]"min="0" placeholder="0"><br><br>
    
            <label for="special-requests">Special Requests:</label><br>
            <textarea id="special-requests" name="booking[specialrequest]"rows="4" cols="50" placeholder="Any special requests or comments"></textarea><br><br>
    
            <button type="submit" class="btn btn-success mt-3">Book Now</button>
        </form>
    </div>
</div>

























