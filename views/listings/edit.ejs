<% layout('/layouts/boilerplate') -%>
<h3>Edit Your Listing</h3>
<h4><%= success %></h4>   
<div class="row mt-3">
    <div class="col-8 offset-2">
    <body>
        <form method="POST" action="/listings/<%=listing.id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- <h3>Edit listing</h3> -->


            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" class="form-control" value="<%=listing.title%>" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" type = "text" class="form-control" required> <%= listing.description %></textarea>
            </div>
            <div class="mb-3 preview-image">
                Original Image <br>
                <img width="200" height="200px" src= "<%=listing.image.url%>">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload New Image</label>
                <input type="file" name="listing[image]" class="form-control" value="<%=listing.image.url%>">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" name="listing[price]" class="form-control" value="<%=listing.price%>" required>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" value="<%=listing.country%>" required>
                </div>
            </div>
           
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" class="form-control" value="<%=listing.location%>" required>
            </div>
           

        <button class="btn btn-dark mt-3 edit-btn mb-3">ADD</button>
    </form>
    </div>
<!-- </div> -->
<script src="/js/novalidate.js"></script>
